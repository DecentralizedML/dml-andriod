<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/bg_action_bar_large" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/leftBtn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="6dp"
            android:padding="16dp" />

        <com.dml.base.ui.ThemeTextView
            android:id="@+id/titleTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textAllCaps="true"
            android:textColor="@color/action_bar"
            android:textSize="12dp"
            app:appFontStyle="barlow_semibold" />

        <ImageView
            android:id="@+id/rightBtn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="6dp"
            android:padding="16dp" />
    </RelativeLayout>

    <com.dml.base.ui.ThemeTextView
        android:id="@+id/amountTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="{$21.13}"
        android:textAllCaps="true"
        android:textColor="@color/colorAccent"
        android:textSize="40dp" />

    <com.dml.base.ui.ThemeTextView
        android:id="@+id/lastUpdateTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/amountTV"
        android:layout_centerHorizontal="true"
        android:text="{Last updated 11:31am, Oct 19th}"
        android:textColor="@color/action_bar"
        android:textSize="12dp" />

    <ImageView
        android:id="@+id/walletBtn"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="104dp"
        android:src="@drawable/ic_wallet"
        android:visibility="gone" />
</RelativeLayout>