<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/stageFirstImageView"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_welcome_done" />

        <ImageView
            android:id="@+id/firstProgressBar"
            android:layout_width="46dp"
            android:layout_height="2dp"
            android:src="@color/signup_line_not_finish" />

        <ImageView
            android:id="@+id/stageSecondImageView"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_welcome_done" />

        <ImageView
            android:id="@+id/secondProgressBar"
            android:layout_width="46dp"
            android:layout_height="2dp"
            android:src="@color/signup_line_not_finish" />

        <ImageView
            android:id="@+id/stageThirdImageView"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_welcome_done" />

        <ImageView
            android:id="@+id/thirdProgressBar"
            android:layout_width="46dp"
            android:layout_height="2dp"
            android:src="@color/signup_line_not_finish" />

        <ImageView
            android:id="@+id/stageFourthImageView"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_welcome_done" />
    </LinearLayout>

    <com.dml.base.view.custom.NoSwipeViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>