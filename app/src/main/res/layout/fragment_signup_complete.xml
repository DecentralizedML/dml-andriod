<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <com.dml.base.ui.ThemeTextView
        android:id="@+id/titleTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="@string/activity_signup_complete_title"
        android:textSize="24dp"
        app:appFontStyle="barlow_medium" />

    <com.dml.base.ui.ThemeTextView
        android:id="@+id/descTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleTV"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="@string/activity_signup_complete_desc" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_above="@id/checkOutBtn"
        android:layout_below="@id/descTV"
        android:layout_centerInParent="true"
        android:layout_margin="16dp"
        android:adjustViewBounds="true"
        android:maxWidth="200dp"
        android:maxHeight="200dp"
        android:src="@drawable/ic_celebration" />

    <com.dml.base.ui.CustomThemeButton
        android:id="@+id/checkOutBtn"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_alignParentBottom="true"
        app:appFontStyle="barlow_semibold" />
</RelativeLayout>