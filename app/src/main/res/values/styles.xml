<resources>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">16dp</item>
        <item name="android:windowBackground">@drawable/bg_main</item>
        <item name="android:windowAnimationStyle">@style/AppTheme.Activity.Animation</item>
    </style>

    <style name="AppTheme.Activity.Animation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/enter_from_right</item>
        <item name="android:activityOpenExitAnimation">@anim/exit_to_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/enter_from_left</item>
        <item name="android:activityCloseExitAnimation">@anim/exit_to_right</item>
    </style>

    <style name="AppTheme.Welcome" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">16dp</item>
        <item name="android:windowBackground">@drawable/bg_main</item>
        <item name="android:windowAnimationStyle">@style/AppTheme.Activity.Animation</item>
    </style>

    <style name="AppTheme.Button.White" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/button_green_hollow</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="AppTheme.Button.Blue" parent="Widget.AppCompat.Button.Colored">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:background">@drawable/button_green</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textColor">@color/button_white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="AppTheme.EditText.Signup" parent="Widget.Design.TextInputLayout">
        <item name="android:background">@drawable/edittext_blue_border</item>
        <item name="android:textColor">@color/signup_edittext_text</item>
        <item name="android:textSize">16dp</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="AppTheme.SignUp.Password.EditText" parent="Widget.Design.TextInputLayout">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/signup_edittext_text</item>
        <item name="android:textSize">16dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="AppTheme.SignUp.Password.InputLayout" parent="Widget.Design.TextInputLayout">
        <item name="android:background">@drawable/edittext_blue_border</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="AppTheme.SignUp.InputLayout" parent="Widget.Design.TextInputLayout">
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorHint">@color/text</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="AppTheme.SignUp.TextInputEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="AppTheme.EditText.Title" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/edittext_title</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="AppTheme.TextView.Title" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/textview_title</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">12dp</item>
    </style>
</resources>
