<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="AppTheme.Welcome" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/welcome_background</item>
        <item name="colorPrimaryDark">@color/welcome_background</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="AppTheme.Button.White" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/button_white</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textColor">@color/button_blue</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="AppTheme.Button.Blue" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/button_blue</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textColor">@color/button_white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="AppTheme.EditText.Signup" parent="Widget.Design.TextInputLayout">
        <item name="android:background">@drawable/edittext_blue_border</item>
        <item name="android:textColor">@color/signup_edittext_text</item>
        <item name="android:textSize">18dp</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="AppTheme.SignUp.Password.EditText" parent="Widget.Design.TextInputLayout">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/signup_edittext_text</item>
        <item name="android:textSize">18dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="AppTheme.SignUp.Password.InputLayout" parent="Widget.Design.TextInputLayout">
        <item name="android:background">@drawable/edittext_blue_border</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>
</resources>
